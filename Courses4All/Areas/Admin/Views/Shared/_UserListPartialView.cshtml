@using System.Collections;
@using Courses4All.Comparers;


@model Courses4All.Areas.Admin.Models.UserCategoryListViewModel;

<div class="table-responsive">
<table class="table table-hover">
    <thead>
        <tr>
            <th scope ="col"></th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Users != null)
        {
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td>
                        @* Model.UsersSelected.Contains(user, new CompareUsers())   
                        Model.UsersSelectedList is an Ienumerable which has a contains method of taiking IEqualityComparer instance as follows
                          Contains<TSource>(IEnumerable<TSource>, TSource, IEqualityComparer<TSource>)
                        *@
                        @if (user != null && Model.UsersSelectedList.Contains(user, new CompareUsers()))
                        {
                            <input type="checkbox" id="UserSelected" class="form-check-input" name="UsersSelected"  value="@user.Id" checked>
                        }
                        else
                        {
                             <input type="checkbox" id="UserSelected" class="form-check-input" name="UsersSelected" value="@user.Id">
                        }
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }
        }
    </tbody>
</table>
</div>